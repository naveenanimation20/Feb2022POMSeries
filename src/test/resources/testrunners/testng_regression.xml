<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Regression Suite" verbose="4"
	thread-count="4" parallel="tests">

	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>

	<test name="Open Cart Login Page Test">
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Open Cart Accounts Page Test">
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<!-- <test name="Open Cart Product Page Test"> <classes> <class name="com.qa.opencart.tests.ProductInfoTest" 
		/> </classes> </test> <test name="Open Cart Register Page Negative Test"> 
		<classes> <class name="com.qa.opencart.tests.RegisterTest" /> </classes> 
		</test> -->



</suite>